{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "rootDirs": ["demo/src"],
    "outDir": "demo/dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts", "src/resolvers", "src/server.ts"],
  "exclude": ["node_modules"]
}